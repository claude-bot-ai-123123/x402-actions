# Server port
PORT=3000

# Solana RPC URL (use a paid RPC for production)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# x402 Payment Gating
X402_ENABLED=true
X402_PAY_TO=YourSolanaWalletAddress  # Receives USDC payments
X402_FACILITATOR_URL=https://facilitator.x402.org  # Optional, uses default

# Kora (gasless transactions)
KORA_PRIVATE_KEY=your_base58_private_key_here
KORA_RPC_URL=http://localhost:8181
